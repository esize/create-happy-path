{
  "name": "create-happy-path",
  "version": "0.1.2",
  "description": "CLI for generating Next.js projects",
  "license": "MIT",
  "author": {
    "name": "Evan Sizemore",
    "email": "evan@wool.homes",
    "url": "https://github.com/esize"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/esize/create-happy-path",
    "directory": "cli"
  },
  "keywords": [
    "nextjs",
    "create-nextjs-project",
    "create-happy-path"
  ],
  "main": "dist/index.js",
  "bin": {
    "create-happy-path": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "typecheck": "tsc",
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo node_modules",
    "start": "node dist/index.js",
    "lint": "eslint . --ignore-pattern './dist/'",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --write",
    "format:check": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --check",
    "release": "changeset version",
    "pub:beta": "pnpm build && npm publish --tag beta",
    "pub:next": "pnpm build && npm publish --tag next",
    "pub:release": "pnpm build && npm publish"
  },
  "dependencies": {
    "@clack/core": "^0.3.4",
    "@clack/prompts": "^0.7.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "commander": "^9.5.0",
    "execa": "^9.4.0",
    "fs-extra": "^10.0.0",
    "inquirer": "^8.2.0",
    "nunjucks": "^3.2.3",
    "ora": "^8.1.0",
    "picocolors": "^1.1.0",
    "sort-package-json": "^2.10.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^20.16.9",
    "@types/nunjucks": "^3.2.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tsup": "^8.3.0",
    "type-fest": "^4.26.1",
    "typescript": "^4.9.5"
  },
  "packageManager": "pnpm@9.11.0",
  "publishConfig": {
    "access": "public"
  }
}
